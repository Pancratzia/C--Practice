@page "/users"

<PageTitle>Usuarios</PageTitle>

<h1 class="text-center mb-5">USUARIOS</h1>

<p class="text-center fw-bold text-uppercase">Tabla General de Usuarios</p>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Correo</th>
        </tr>
    </thead>
    <tbody>
       <tr>
           <td>Primer usuario</td>
           <td>Primer correo</td>
       </tr>
    </tbody>
</table>

<br />

<label class="form-label">Nombre: </label>
<input class="form-control" type="text" placeholder="Escriba su nombre" />
<br />
<label class="form-label">Correo: </label>
<input class="form-control" type="email" placeholder="Escriba su correo" />

<br />
<button type="button" class="btn btn-primary">Guardar</button>

<p class="alert alert-info mt-2">Procesando...</p>
